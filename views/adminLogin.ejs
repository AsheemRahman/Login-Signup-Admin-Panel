<%- include('header')%>
    <div class="logo-container justify-content-end ">
    <label for="form2Example3">
        <a class="cls" href="/"><button class="d-flex bg-secondary border-0 rounded-3 px-4 pt-2 pb-2 "> User Login</button></a>
    </label>
</div>

    <div class="d-flex align-items-center justify-content-end login-container">
        <form action="/admin/login" method="post" class="login-form">
            <h2 class="text-white">Admin login</h2>
            <input type="email" class="admin-login-email text-white" name="adminMail" placeholder="admin username" required>

            <input type="password" class="admin-login-password text-white" name="adminPassword" placeholder="admin password" required>

            <% if(status){%>
                <p id="login-error-message">
                    <%= loginErrorMess%>
                </p>
                <%}%>
                
                    <button type="submit" class="btn btn-primary">Login</button>

        </form>
    </div>