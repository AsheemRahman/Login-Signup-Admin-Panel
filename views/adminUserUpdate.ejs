<%-include('header') %>


<div class="user-update-container">
    <form action="/admin/userUpdate/<%=user.id%>" method="post">
        <h2 style="text-transform: uppercase;" class="text-white">Edit user details</h2>
        <div class="d-flex gap-5">
            <input type="text" value="<%=username%>" class="text-white" disabled>
            <input type="text" placeholder="Enter New Name" class="text-white" name="updateName" required>
        </div>
    <div class="d-flex gap-5">
        <input type="email" disabled value="<%=userMail%>" class="text-white" disabled>
        <input type="email" placeholder="Enter New Email" name="updateEmail" class="text-white" required>
    </div>
        <button class="btn btn-success" type="submit">Update</button>
    </form>
</div>



